build-type:          Simple
extra-source-files:  CHANGELOG.md, README.md

library
  exposed-modules:     Budget
  other-modules:
    Types
    QRCode
    AsciiArt
    Database
  build-depends:       base >=4.13 && <4.14,
                       aeson,
                       array,
                       bytestring,
                       containers,
                       data-ordlist,
                       ghc-prim,
                       deriveJsonNoPrefix,
                       hedis,
                       http-client,
                       JuicyPixels,
                       lens-aeson,
                       utf8-string,
                       lens,
                       qrcode-core,
                       qrcode-juicypixels,
                       text,
                       uuid,
                       wreq,
  hs-source-dirs:      src

executable budget
  main-is:             Main.hs
  -- other-modules:
  -- other-extensions:
  extensions: OverloadedStrings
  build-depends:       base >=4.13 && <4.14,
                       budget -any,
                       text,
                       envy,

test-suite tests
   hs-source-dirs:      src tests
   main-is:             Tests.hs
   type:                exitcode-stdio-1.0
   other-modules:
     Budget
   build-depends:       base -any,
                        budget -any,
                        tasty,
                        tasty-hunit,
                        hspec ==2.*,
                        hspec-discover ==2.*,
                        HUnit -any,
                        QuickCheck -any
